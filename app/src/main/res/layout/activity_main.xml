<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/abajo_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#FF9800"
        android:text="abajo\npapito"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arriba_button" />

    <Button
        android:id="@+id/arriba_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="#FF9800"
        android:text="arriba\nmamita"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/izquierda_button"
        android:layout_width="105dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="270dp"
        android:backgroundTint="@color/teal_200"
        android:text="izquierda\nmacarena"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arriba_button" />

    <Button
        android:id="@+id/derecha_button"
        android:layout_width="105dp "
        android:layout_height="100dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/teal_200"
        android:text="derrecha\nmi rey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arriba_button" />

    <Button
        android:id="@+id/color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="coloreate"
        app:layout_constraintBottom_toTopOf="@+id/abajo_button"
        app:layout_constraintEnd_toStartOf="@+id/derecha_button"
        app:layout_constraintStart_toEndOf="@+id/izquierda_button"
        app:layout_constraintTop_toBottomOf="@+id/arriba_button" />

</androidx.constraintlayout.widget.ConstraintLayout>